<%- include('./partials/_head_partial.ejs') %> 
<div class="container">
    <div class="main">
        <div class="form-gorup form-div">
            <h1 class="text-capitalize text-light text-center">secret diary</h1>
            <p class="font-weight-bold text-center text-light">Store your thoughts permanetly and securely</p>
            <p class="font-weight-bold text-center text-light">Interested? Sign up now.</p>

            <% if(message) {%>
                <div class="alert alert-danger" role="alert">
                   <p class="text-center"><%= message.intro %> </p>
                   <p class="text-center"><%= message.message %> </p>
                </div>

            <% } %> 

                         
            <form action="/register" method="POST">
                <input type="text" name="username" class="form-control mb-3" placeholder="Your Email">
                <input type="password" name="password" class="form-control mb-3" placeholder="Your Password">
                <div class="text-center"><button type="submit" class="btn btn-success">Sign Up!</button></div>
                
            </form>
            <a class="font-weight-bold d-block text-center mt-3" href="/login">Log in</a>
        </div>
    </div>
   
    
</div>
